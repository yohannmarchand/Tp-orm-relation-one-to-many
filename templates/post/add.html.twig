{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
<div class="container py-5">
  
  <h1>Ajouter un article</h1>
  
  <form action="{{path('post_addSave')}}" method="post">
  <div class="row">
    <div class="form-group col-6">
      <label>Titre</label>
      <input type="text" class="form-control" aria-describedby="emailHelp" name="title">
    </div>
    <div class="form-group col-6">
      <label>Illustration :</label>
      <input type="text" class="form-control" aria-describedby="emailHelp" name="illustration">
    </div>
    <div class="form-group col-6">
      <label>Le contenu</label>
      <textarea class="form-control"rows="3" name="body"></textarea>
    </div>
    <div class="form-group col-6">
      <label>Description de l'illustration</label>
      <input type="text" class="form-control" aria-describedby="emailHelp" name="title">
    </div>

    <div class="form-group col-3">
    <label for="example-datetime-local-input" class=" col-form-label">Date de publication</label>
    <input class="form-control" type="date"  id="example-datetime-local-input" name="publishedAt">
  </div>
</div>
<button type="submit" class="btn btn-primary">Ajouter</button>
</form>

</div>

{% endblock %}
